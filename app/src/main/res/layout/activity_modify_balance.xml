<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".transactions.ModifyBalanceActivity">

        <EditText
            android:id="@+id/et_value"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="RS00,00"
            android:inputType="numberDecimal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/bt_deposit"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/deposit"
            app:layout_constraintStart_toStartOf="@+id/et_value"
            app:layout_constraintTop_toBottomOf="@+id/et_value" />


        <Button
            android:id="@+id/bt_withdraw"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/withdraw"
            app:layout_constraintStart_toStartOf="@+id/bt_deposit"
            app:layout_constraintTop_toBottomOf="@+id/bt_deposit" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

